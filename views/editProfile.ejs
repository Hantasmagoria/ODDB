<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Editing <%=playerName%>'s profile</title>
    <% include ../partials/head.ejs %> <% include ../controllers/validation.ejs
    %>
  </head>
  <body>
    <header class="header-banner">
      <div class="container-width">
        <div class="logo-container">
          <div class="logo">Editing: <%=playerName%>'s Profile</div>
        </div>
        <nav class="menu">
          <div class="menu-item"><%if(loggedIn){%> <a href="/user/<%=username%>">Profile</a><%}
            else{%> <a href="/login">Login</a><%}%></div>
          <div class="menu-item"><a href="/leaderboard">Leaderboard</a></div>
          <div class="menu-item"><a href="/">Game</a></div>
        </nav>
        <div class="clearfix"></div>
        <form
        class="container-edit"
        name="Edit"
        action="/user/<%=playerName%>/edit?_method=PUT"
        onsubmit="return validateForm()"
        method="POST"
        >
      <h2>Username:</h2>
      <input name="username" class="editable" value="<%=playerName%>" />
      <h2>Current Password:</h2>
      <input
        name="oldpass"
        type="password"
        class="editable"
      />
      <h2>New Password:</h2>
      <input name="newpass" type="password" class="editable" value="" />
      <h2>Confirm New Password:</h2>
      <input name="newrepass" type="password" class="editable" value="" />
      <br /><input class="lead-btn" type="submit" value="save" /><input class="lead-btn" onclick="window.location.href='/user/<%=playerName%>'" value="cancel" />
        <!-- Let user update email address also -->
    </form>
      </div>
  </body>
</html>
