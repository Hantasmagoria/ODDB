<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%=playerName%>'s profile</title>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header class="header-banner">
      <div class="container-width">
        <div class="logo-container">
          <div class="logo"><%=playerName%></div>
        </div>
        <nav class="menu">
          <div class="menu-item"><%if(editable){%> <a href="/logout">Logout</a><%}
            else if(!editable && loggedIn){%> <a href="/user/<%=username%>">Profile</a><%}else{%><a href="/login">Login</a><%}%></div>
          <div class="menu-item"><a href="/leaderboard">Leaderboard</a></div>
          <div class="menu-item"><a href="/">Game</a></div>
        </nav>
        <div class="clearfix"></div>
        <p><div>Profile Picture Placeholder</div><%=user.username%></p>
        <p>Joined: <%=user.createdAt.getDate()%>/<%=user.createdAt.getMonth()%>/<%=user.createdAt.getFullYear()%></p>
        <!-- <p>Highest Score: <%=user.highestScore%></p> -->
        <!-- <p><%=JSON.stringify(user)%></p> -->
        <%if(editable){%> <input
          class="lead-btn"
            type="button"
            value="Edit"
            onclick="window.location.href='/user/<%=playerName%>/edit'"
          /><%}%>
    
  </body>
</html>
